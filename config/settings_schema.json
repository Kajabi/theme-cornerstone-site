[
  {
    "name": "theme_info",
    "theme_name": "Cornerstone",
    "theme_version": "1.1.2",
    "theme_author": "Kajabi",
    "theme_documentation_url": "https://developers.mykajabi.com/blog?tag=cornerstone+site",
    "theme_support_url": "https://github.com/Kajabi/theme-cornerstone-site/issues"
  },
  {
    "name": "Favicon",
    "elements": [
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon Image",
        "fit": "crop",
        "width": 32,
        "height": 32,
        "info": "Must be a 32x32 PNG file. Transparency is supported. Please allow some time for favicon to change. Learn how to create your own favicon [here](canva_logos)"
      }
    ]
  },
  {
    "name": "Typography",
    "elements": [
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "font_select",
        "label": "Font Family",
        "id": "font_family",
        "default": "Open Sans",
        "preset": "google_fonts",
        "options": []
      }
    ]
  },
  {
    "name": "Color Scheme",
    "elements": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#222"
      }
    ]
  },
  {
    "name": "Language",
    "elements": [
      {
        "type": "header",
        "content": "Language"
      },
      {
        "type": "text",
        "id": "language_login",
        "label": "Login Text",
        "default": "Login"
      },
      {
        "type": "text",
        "id": "language_logout",
        "label": "Logout Text",
        "default": "Logout"
      },
      {
        "type": "text",
        "id": "language_settings",
        "label": "Settings Text",
        "default": "Settings"
      },
      {
        "type": "text",
        "id": "language_library",
        "label": "Library Text",
        "default": "My Library"
      }
    ]
  },
  {
    "name": "Password Recovery",
    "elements": [
      {
        "type": "header",
        "content": "Password Recovery"
      },
      {
        "type": "text",
        "id": "recover_text",
        "label": "Recover Text",
        "default": "Recover Password"
      },
      {
        "type": "text",
        "id": "email_text",
        "label": "Email Text",
        "default": "Email"
      },
      {
        "type": "text",
        "id": "recovery_text",
        "label": "Recovery Text",
        "default": "Send Recovery Info"
      },
      {
        "type": "text",
        "id": "login_text",
        "label": "Login Text",
        "default": "Login"
      }
    ]
  },
  {
    "name": "Password Reset",
    "elements": [
      {
        "type": "header",
        "content": "Password Reset"
      },
      {
        "type": "text",
        "id": "reset_text",
        "label": "Reset Text",
        "default": "Create new password"
      },
      {
        "type": "text",
        "id": "new_password",
        "label": "New Password Text",
        "default": "Enter New Password"
      },
      {
        "type": "text",
        "id": "confirm_password",
        "label": "Confirm Password Text",
        "default": "Confirm Password"
      },
      {
        "type": "text",
        "id": "reset_btn",
        "label": "Reset Button Text",
        "default": "Submit"
      }
    ]
  }
]
